
@model List<ResultAppUserDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayoutController/_AdminLayout.cshtml";
}


<div class="active-member">
    <div class="table-responsive">
        <table class="table table-xs mb-0">
            <thead>
                <tr>
                    <th>User</th>
                    <th>City</th>
                    <th>Country</th>
                    <th>Status</th>
                    <th>Gender</th>
                    <th>Works At</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><img src="@item.ImageUrl" class=" rounded-circle mr-3" alt="">@item.Name @item.Surname</td>
                        <td>@item.City</td>
                        <td>
                            <span>Türkiye</span>
                        </td>
                        <td>
                            <div>
                                <div class="progress" style="height: 6px">
                                    <div class="progress-bar bg-success" style="width: 50%"></div>
                                </div>
                            </div>
                        </td>
                        <td><i class="fa fa-circle-o text-success  mr-2"></i>Erkek</td>
                        <td><i class="fa fa-globe-o text-success  mr-2"></i>@item.WorkLocationName</td>
                    </tr>
                }
            </tbody>
        </table>
        <br />
        <a href="/Register/Index" class="btn btn-primary">Register</a>
    </div>
</div>
