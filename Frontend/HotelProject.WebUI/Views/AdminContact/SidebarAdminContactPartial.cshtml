@model SidebarContactViewModel

<div class="mail-list mt-4">
    <a href="/AdminContact/Inbox/" class="list-group-item border-0 p-r-0 @(Model.ActivePage == "Inbox" ? "text-primary font-weight-bold" : "")">
        <i class="fa fa-inbox font-18 align-middle mr-2"></i>
        Inbox <span class="badge badge-primary badge-sm float-right m-t-5">@Model.InboxCount</span>
    </a>
    <a href="/AdminContact/Sendbox/" class="list-group-item border-0 p-r-0 @(Model.ActivePage == "Sendbox" ? "text-primary font-weight-bold" : "")">
        <i class="fa fa-paper-plane font-18 align-middle mr-2"></i>
        Sent
    </a>
    <a href="#" class="list-group-item border-0 p-r-0">
        <i class="fa fa-star-o font-18 align-middle mr-2"></i>Important <span class="badge badge-danger badge-sm float-right m-t-5">47</span>
    </a>
    <a href="#" class="list-group-item border-0 p-r-0"><i class="mdi mdi-file-document-box font-18 align-middle mr-2"></i>Draft</a>
    <a href="#" class="list-group-item border-0 p-r-0"><i class="fa fa-trash font-18 align-middle mr-2"></i>Trash</a>
</div>

