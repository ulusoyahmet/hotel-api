@model List<ApiMovieViewModel>
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br /> <br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Movie Name</th>
            <th>Rating</th>
            <th>Link</th>
        </tr>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.rank</td>
                <td>@item.title</td>
                <td>@item.rating</td>
                <td><a href="@item.imdb_link" class="btn btn-dark" >See in IMDB</a> </td>
            </tr>
        }
    </table>
</div>