@model List<BookingApiViewModel.Result>

@{
    Layout = null;
    int count = 0;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br /> <br />
    @using (Html.BeginForm("Index", "BookingByCity", FormMethod.Post))
    {
        <label>City ID</label>
        <input type="text" class="form-control" name="cityID" />
        <br />
        <button class="btn btn-primary">Search</button>
    }
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Hotel Name</th>
            <th>Rating</th>
            <th>Details</th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th>@count</th>
                <td>@item.name</td>
                <td>@item.reviewScore</td>
                <td><a target="_blank" href="@item.photoMainUrl" class="btn btn-dark">See Photo</a> </td>
            </tr>
        }
    </table>
</div>
